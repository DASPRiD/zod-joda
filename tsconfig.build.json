{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "target": "ES2020",
        "module": "nodenext",
        "moduleResolution": "node16",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ]
}
